{
  "watch": ["dist"],
  "ext": "js,json",
  "exec": "node -r dotenv/config -r tsconfig-paths/register dist/bin/index.js",
  "delay": "500",
  "restartable": "rs",
  "runOnChangeOnly": false,
  "ignore": ["*.test.js", "*.spec.js", "node_modules/*", "src/*"],
  "env": {
    "NODE_ENV": "development"
  }
}