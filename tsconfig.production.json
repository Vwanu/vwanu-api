{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./.build",
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
     "removeComments": true,
     "noImplicitAny": false,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
    "strictFunctionTypes": false,
     "strictNullChecks": false,
     "strictPropertyInitialization": false,
     "noUnusedLocals": false,
     "noUnusedParameters": false,
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "lib": ["ES2021"],


    "paths": {
      "@config/*": ["../config/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@middleware/*": ["middleware/*"],
      "@service/*": ["services/*"],
      "@root/*": ["*"],
    },
    "typeRoots": ["./custom_typings", "../node_modules/@types"],

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/app.ts", "src/bin/index.ts", "src/bin/server_helper.ts"],
  "exclude": [
    "node_modules",
    ".build",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/service/**/*",
    "src/database/**/*",
    "src/lib/**/*",
    "src/models/**/*",
    "src/middleware/**/*",
    "src/channels/**/*",
    "src/declarations.ts"
  ]
}
