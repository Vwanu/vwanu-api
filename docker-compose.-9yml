version: '3.8'
services:
  web:
    build: ./client
    ports:
      - 3000:3000
    volumes:
      - ./client:/app

  api:
    container_name: node_tabnine
    image: node_tabnine:0.0.4
    build:
      context: ./server
    ports:
      - 4000:4000
    environment:
      - PORT=4000
      - PGDATABASE=tabnine_db
      - PGUSER=root
      - PGPASSWORD=null
      - PGHOST=node_db
    depends_on:
      - node_db
  node_db:
    container_name: node_db
    image: 'postgres:12'
    ports:
      - '5432:5432'
    environment:
      - POSTGRES_USER=root
      - POSTGRES_PASSWORD=null
      - POSTGRES_DB=tabnine_db
      - POSTGRES_HOST_AUTH_METHOD=trust
    volumes:
      - nps_data:/var/lib/postgresql/data

volumes:
  nps_data: {}
