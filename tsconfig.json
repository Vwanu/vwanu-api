{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["*"],
      "@entity/*": ["entity/*"],
      "@schema": ["schema"],
      "@testing": ["testing"]
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2021"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": false,
    "swc": false,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/cloudinary/index.ts", "src/services", "src/channels.ts", "src/lib/utils/UsersCommon.ts", "src/lib/utils/userQuery.ts","src/middleware/HandleRequestErrors/", "src/lib"]
}
